<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css">
    <title>Site Name</title>
</head>
<body>
    <main>
        <section class="totalNumSection">
            <h2 class="currentDay"><%= currentDate %></h2>
            <% if (moodNum > 0) { %>
                <h2 class="positiveMoodNum"><%= moodNum %></h2>
            <%} else {%>
                <h2 class="negativeMoodNum"><%= moodNum %></h2>
            <%}%>
        </section>
        <section class="titleSection">
            <h1 class="title">Welcome</h1>
            <h5 class="subTitle">How is your mood today?</h5>
        </section>
        <section class="buttonSection">
            <span href="" class="moodButton good">Feeling Good</span>
            <span href="" class="moodButton down">A Little Down</span>
        </section>
        <button type="submit" class="submitButton">Submit</button>
    </main>
    <section class="datesLogged">
        <% results.forEach(doc => {%>
            <span><%= doc.currentDay %>: </span><span><%= doc.moodNumber %></span><br>
        <%})%>
    </section>
    <script src="/main.js" type="text/javascript"></script>
</body>
</html>